@using WebApp.ViewModels
@model PageViewModel
@{
    //ViewData["Title"] = "Menu";

}
<div class="col-md-6">

    <img src="@Model.CurrentCategory.ImageUrl" class="img-fluid rounded" alt="@Model.CurrentCategory.Nazwa" />
</div>

<!-- Sekcja tekstu -->
<div class="col-md-6">
    <h2>@Model.CurrentCategory.Nazwa</h2>
    <p>
        @Html.Raw(Model.CurrentCategory.Opis)
    </p>

</div>
@foreach (var produkt in Model.ProductsList)
{
    <div class="col-md-4 col-sm-6 mb-4">
        <div class="card h-100">
            <img src="@produkt.ImageUrl" class="card-img-top" alt="@produkt.Nazwa">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">@produkt.Nazwa</h5>
                <p class="card-text">@produkt.Opis</p>
                <div class="mt-auto">
                    <h5>@produkt.Cena.ToString("C")</h5>
                    <a href="@Url.Action("Detail", "Produkty", new { productId = produkt.ProduktId,categoryId = Model.CurrentCategory.CategoryId,categoryName =Model.CurrentCategory.NazwaUrl  })" class="btn btn-primary">Zobacz więcej</a>
                </div>
            </div>
        </div>
    </div>
}
