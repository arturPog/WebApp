@using WebApp.Models
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Lista KategoriI";
}
<div class="col-12">

    <a href="@Url.Action("Create", "Category")" class="btn btn-primary mb-2">Dodaj Kategorię</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nazwa</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryId</td>
                    <td>@category.Nazwa</td>
                   
                    <td>
                        <a href="@Url.Action("Edit", "Category", new { id = category.CategoryId })" class="btn btn-sm btn-info">Edytuj</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>