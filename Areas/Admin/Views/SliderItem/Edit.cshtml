@using WebApp.Models
@model SliderItem
@{
    ViewData["Title"] = "Edycja Slidera";
}
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="SliderItemId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Nazwa" class="control-label"></label>
        <input asp-for="Nazwa" class="form-control" />
        <span asp-validation-for="Nazwa" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Opis" class="control-label"></label>
        <textarea asp-for="Opis" class="form-control"></textarea>
        <span asp-validation-for="Opis" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Image">Grafika kategorii (zostaw puste, aby nie zmieniać)</label>
        <input type="file" class="form-control-file" id="Image" name="Image">
        @if (Model.ImageUrl != null)
        {
            <img src="@Model.ImageUrl" style="max-height: 200px; max-width: 200px;" />
        }
    </div>
    <div class="form-group form-check">
        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
        <label asp-for="IsActive" class="form-check-label">Czy aktywna?</label>
    </div>

    <button type="submit">Zapisz zmiany</button>
</form>